package com.craigbooker.FormStuff;

import android.content.Context;
import android.widget.LinearLayout;
import android.widget.LinearLayout.LayoutParams;
	

public class FormBorder extends LinearLayout {
	Context _context;
	
		public FormBorder(Context context){
			super(context);
			
			_context = context;
			LinearLayout _ll = new LinearLayout(context);
			LayoutParams _lp = new LayoutParams(LayoutParams.MATCH_PARENT, 5);
			_ll.setLayoutParams(_lp);
			
			this.addView(_ll);
			//return _ll;
		}
}